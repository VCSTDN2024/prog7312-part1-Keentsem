<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - South African Municipal Services Portal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/MunicapalServicesApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-page="/Index">
                    <i class="fas fa-city me-2"></i>South African Municipal Services Portal
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">
                                <i class="fas fa-home me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/ReportIssues">
                                <i class="fas fa-plus-circle me-1"></i>Report Issue
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Badges">
                                <i class="fas fa-medal me-1"></i>My Badges
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Leaderboard">
                                <i class="fas fa-trophy me-1"></i>Leaderboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/AnalyticsDashboard">
                                <i class="fas fa-chart-line me-1"></i>Analytics
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/AdvancedFeatures">
                                <i class="fas fa-city me-1"></i>Community Services
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Privacy">
                                <i class="fas fa-shield-alt me-1"></i>Privacy
                            </a>
                        </li>
                    </ul>
                    <div class="navbar-nav">
                        @if (ViewData["IsLoggedIn"] as bool? == true)
                        {
                            <div class="dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user me-1"></i>@ViewData["Username"]
                                </a>
                                <ul class="dropdown-menu">
                                    <li><h6 class="dropdown-header">Logged in as:</h6></li>
                                    <li><span class="dropdown-item-text">@ViewData["Username"] (@ViewData["UserLevel"])</span></li>
                                    <li><span class="dropdown-item-text">@ViewData["UserEmail"]</span></li>
                                    <li><span class="dropdown-item-text">@ViewData["UserMunicipality"]</span></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><span class="dropdown-item-text"><i class="fas fa-star text-warning me-1"></i>@ViewData["TotalPoints"] points</span></li>
                                    <li><span class="dropdown-item-text"><i class="fas fa-file-alt me-1"></i>@ViewData["ReportsSubmitted"] reports</span></li>
                                    <li><span class="dropdown-item-text"><i class="fas fa-medal me-1"></i>@ViewData["EarnedBadgesCount"] badges</span></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-page="/Notifications"><i class="fas fa-bell me-1"></i>Notifications</a></li>
                                    <li><a class="dropdown-item" asp-page="/Badges"><i class="fas fa-medal me-1"></i>My Badges</a></li>
                                    <li><a class="dropdown-item" asp-page="/Leaderboard"><i class="fas fa-trophy me-1"></i>Leaderboard</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="#" onclick="logout()"><i class="fas fa-sign-out-alt me-1"></i>Logout</a></li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a class="nav-link" asp-area="" asp-page="/Login">
                                <i class="fas fa-sign-in-alt me-1"></i>Login
                            </a>
                            <a class="nav-link" asp-area="" asp-page="/Register">
                                <i class="fas fa-user-plus me-1"></i>Register
                            </a>
                        }
                        <a class="nav-link position-relative" asp-area="" asp-page="/Notifications">
                            <i class="fas fa-bell me-1"></i>Notifications
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger notification-badge" style="display: none;">
                                0
                            </span>
                        </a>
                        <span class="navbar-text">
                            <i class="fas fa-star text-warning me-1"></i>
                            Community Points: <strong>@ViewData["TotalPoints"]</strong>
                        </span>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light" style="border-top: 3px dashed var(--embroidery-thread) !important;">
        <div class="container">
            <div class="row align-items-center py-1">
                <div class="col-md-6">
                    <div class="d-flex align-items-center">
                        <img src="~/images/SA.png" alt="South African Flag" class="sa-flag me-2" style="width: 20px; height: 15px;" />
                        <div>
                            <small><strong>&copy; 2025 - South African Municipal Services Portal</strong></small>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 text-end">
                    <small class="text-muted">Contact: info@municipal.gov.za | Emergency: 10111</small>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        function logout() {
            if (confirm('Are you sure you want to logout?')) {
                // Redirect to logout handler
                window.location.href = '/Login?handler=Logout';
            }
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>